dnl Process this file with autoconf to produce a configure script.
AC_INIT(src/main.cpp)
AM_INIT_AUTOMAKE(stellarium,0.4.7)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CXX

AC_PROG_INSTALL
AC_PROG_RANLIB


AC_CHECK_HEADER(GL/gl.h,,AC_MSG_ERROR(gl.h not found - please install OpenGL- or Mesa-devel))
AC_CHECK_HEADER(GL/glu.h,,AC_MSG_ERROR(glu.h not found - please install GLU- or MesaGLU-devel))
AC_CHECK_HEADER(GL/glut.h,,AC_MSG_ERROR(glut.h not found - please install GLUT- or MesaGLUT-devel))

AC_CHECK_LIB(m,fabs,LIBS="$LIBS -lm",AC_MSG_RESULT(math library not found))
AC_CHECK_LIB(GL,glEnable,LIBS="$LIBS -lGL",AC_MSG_ERROR(GL not found - please install GL or MesaGL))
AC_CHECK_LIB(GLU,gluPerspective,LIBS="$LIBS -lGLU",AC_MSG_ERROR(GLU not found - please install GLU or MesaGLU))
AC_CHECK_LIB(glut,glutMainLoop,LIBS="$LIBS -lglut",AC_MSG_ERROR(GLUT not found - please install GLUT or MesaGLUT))
AC_CHECK_LIB(Xmu,_XEditResCheckMessages,LIBS="$LIBS -lXmu",AC_MSG_RESULT(Xmu not found - this library is required on some systems.))
AC_CHECK_LIB(X11, XSendEvent,LIBS="$LIBS -lX11",AC_MSG_RESULT(X11 not found - this library is required on some systems.))
dnl Checks for library functions.
AC_CHECK_FUNCS(strdup toupper)

CFLAGS="$CFLAGS -Wall"

AC_OUTPUT(Makefile src/Makefile src/astrolib/Makefile src/glpng/Makefile config/Makefile data/Makefile textures/Makefile)

