ScreenImageMgr.createScreenImage("logo", "../textures/logo24bits.png", 0, 100);
for (i=0; i<500; i++)
{
	ScreenImageMgr.setImageXY("logo", i, 100);
	if (i%40 == 0)
	{
		ScreenImageMgr.showImage("logo", !ScreenImageMgr.getShowImage("logo"));
	}
	core.wait(0.02);
}
ScreenImageMgr.deleteAllImages();
