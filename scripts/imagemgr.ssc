ScriptImageMgr.createScreenImage("logo", "../textures/logo24bits.png", 0, 100);
for (i=0; i<500; i++)
{
	ScriptImageMgr.setImageXY("logo", i, 100);
	if (i%40 == 0)
	{
		ScriptImageMgr.setImageShow("logo", !ScriptImageMgr.getImageShow("logo"));
	}
	core.wait(0.02);
}
ScriptImageMgr.deleteAllImages();
